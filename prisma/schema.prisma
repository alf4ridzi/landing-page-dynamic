generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Headline {
  id Int @id @default(autoincrement())
  logo String
  tagline String
}

model Problems {
  id Int @id @default(autoincrement())
  name String
  text String
}

model Solutions {
  id Int @id @default(autoincrement())
  title String
  text String
  image String
}

model Portfolio {
  id Int @id @default(autoincrement())
  title String
  text String
  image String
}

model About {
  id Int @id @default(autoincrement())
  title String
  caption String
  image String
}

model Faqs {
  id Int @id @default(autoincrement())
  question String
  answer String
}

model Contact {
  id Int @id @default(autoincrement())
  Email String
}
