generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model hero {
  id Int @unique @default(autoincrement())
  title String
  tagline String
}

model problems {
  id Int @unique @default(autoincrement())
  title String
  description String
  impact String
  icon String
}

model portfolios {
  id Int @unique @default(autoincrement())
  title String
  tag String
  image String
  description String
  metrics String
}

model testimonials {
  id Int @unique @default(autoincrement())
  name String
  role String
  quote String
  rating Int
  company String
}

model teams {
  id Int @unique @default(autoincrement())
  role String
  image String
  expertise String
  color String
}

model questions {
  id Int @unique @default(autoincrement())
  question String
  answer String
}

model website {
  id Int @unique @default(autoincrement())
  email String
  phone BigInt
}



